/* pages/cart/cart.wxss */
.mybutton{
  display: inline;
  width: 120rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

#btn1 {
  background-color: #fc7373;
  border-radius: 120rpx;
}

#btn2 {
  background-color: #d1d1d1;
  border-radius: 120rpx;
}

.mertitle {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-bottom: 65rpx;
}

.row {
  display: flex;
  flex-direction: row;
  border: 1px solid #c7c7c7;
  border-radius: 24rpx;
  padding-top: 15rpx;
  margin-top: 5rpx;
  padding-left: 12rpx;
  height: 300rpx;
  background-color: rgba(243, 243, 243, 0.884);
}

.mytext {
  display: inline-block;
  vertical-align: middle;
  padding: 24rpx;
  width: 430rpx;
  height: 285rpx;
}

.merbtn {
  border: 2rpx solid #fd0000;
  border-radius: 40rpx;
  background-color: #fd0000;
  margin-top: 8rpx;
  height: 40rpx;
  width: 40rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 900;
  color: rgb(255, 255, 255);
}

.mernum {
  display: inline;
  padding-right: 24rpx;
  padding-left: 24rpx;
}

.merstate {
  display: flex;
  justify-content: flex-end;
}

.goodspic {
  display: inline-block;
  height: 285rpx;
  width: 285rpx;
}

.totalmoney {
  padding-top: 12rpx;
  margin-bottom: 12rpx;
  color: #fd0000;
  border-top: 5rpx dotted #7c7c7c;
  border-radius: 12rpx;
  background-color: white;
  text-align: center;
}

.operation {
  background-color: blanchedalmond;
  display: flex;
  align-items: center;
  justify-content: center;
}

.operation text {
  font-size: 37rpx;
}

.down {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.blank {
  height: 100px;
}

#mer {
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.buttonhover {
  opacity: 0.9;
  transform: scale(0.95, 0.95);
  position: relative;
  top: 3rpx;
  left: 3rpx;
 }